<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.weiqi.zoo"
    tools:ignore="UnusedAttribute">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="dev.weiqi.zoo.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="dev.weiqi.zoo.ui.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.weiqi.zoo.ui.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="dev.weiqi.zoo.ui.areadetail.AreaDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="dev.weiqi.zoo.ui.plantdetail.PlantDetailActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>